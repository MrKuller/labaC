#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include "sec.h"
int main()
{
    double **m1, **m2, **result;
    int i, j, n;
    char znak;
    printf("Vvedite znak: \n");
    scanf("%c", &znak);
    printf("Vvedite razmer matrici: \n");
    scanf("d", &n);
    m1 = razmer(n);
    m2 = razmer(n);
    printf("Vvedite znach m1: \n");
    for (i=0; i<n; i++){
        for (j=0; j<n; j++){
            scanf("lf", &m1[i][j]);
        }
    }
    printm(n, m1);
    printf("Vvedite znach m2: \n");
    for (i=0; i<n; i++){
        for (j=0; j<n; j++){
            scanf("lf", &m2[i][j]);
        }
    }
    printm(n, m2);
    result = reshenie(m1, m2, n, znak);
    printf("Reshenie: \n");
    printm(n, result);
    for (i=0; i<n; i++){
        free(m1[i]);
    }
    free(m1);
    for (i=0;i<n;i++){
        free(m2[i]);
    }
    free(m2);
    return 0;
}



