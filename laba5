#include <stdio.h>
#include <stdlib.h>
#include <math.h>
double second(){
    int i, j, n;
    char znak;
    double **razmer(int n){
        double **perem = (double**)malloc(n*sizeof(double*));
        for (int i=0; i<n; i++){
            perem[i] = (double*)malloc(n*sizeof(double));
        }
        return perem;
    }
    void printm(int n, double **matric){
        int i, j;
        for (i=0;i<n;i++){
            for (j=0;j<n;j++){
                printf("lf ", matric[i][j]);
            }
            printf("\n");
        }
    }
    double reshenie(double **m1, double **m2, int n, char znak){
        double **result = razmer(n);
        int i, j, k;
        if (znak == '+'){
            for (i=0;i<n;i++){
                for (j=0;j<n;j++){
                    result[i][j] = m1[i][j] + m2[i][j];
                }
            }
        }
        if (znak == '-'){
            for (i=0;i<n;i++){
                for (j=0;j<n;j++){
                    result[i][j] = m1[i][j] - m2[i][j];
                }
            }
        }
        if (znak == '*'){
            for (i=0;i<n;i++){
                for (j=0;j<n;j++){
                    result = 0;
                    for (k=0;k<n;k++){
                        result[i][j] = m1[i][k] * m2[k][j];
                    }
                }
            }
        }
        return **result;
    }
}
